<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFF"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_sublevel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub-level 1: Single digit addition"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A" />

        <ImageView
            android:id="@+id/iv_sublevel_lock"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Lock icon"
            android:src="@android:drawable/ic_lock_lock"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sublevel_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:src="@android:drawable/checkbox_on_background"
            android:contentDescription="Completed"
            android:visibility="gone"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sublevel_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice single digit addition"
        android:textSize="13sp"
        android:textColor="#4A148C"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_to_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Practice" />

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:contentDescription="Info" />
    </LinearLayout>

</LinearLayout> 